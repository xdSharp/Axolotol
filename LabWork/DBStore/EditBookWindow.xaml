<Window x:Class="DBStore.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Название" FontSize="16" FontFamily="Segoe UI" />
            <TextBox x:Name="TitleBox" FontSize="14" Margin="0,5,0,10" FontFamily="Segoe UI" />
            <TextBlock Text="Автор" FontSize="16" FontFamily="Segoe UI" />
            <TextBox x:Name="AuthorBox" FontSize="14" Margin="0,5,0,10" FontFamily="Segoe UI" />
            <TextBlock Text="Год издания" FontSize="16" FontFamily="Segoe UI" />
            <TextBox x:Name="YearBox" FontSize="14" Margin="0,5,0,20" FontFamily="Segoe UI" />
            <Button Content="Сохранить" Click="SaveButton_Click" Background="#FF4CAF50" Foreground="White" FontSize="16" Padding="10,5" FontFamily="Segoe UI" />
        </StackPanel>
    </Grid>
</Window>