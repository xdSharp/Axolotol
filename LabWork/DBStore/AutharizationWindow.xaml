<Window x:Class="DBStore.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auth" Height="350" Width="400" WindowStartupLocation="CenterScreen"
        Icon="/Resources/app_icon.ico">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Image Source="/Resources/logo.png" Width="200" Height="100" Margin="0,0,0,20" />
            <TextBlock Text="Логин" FontSize="16" FontFamily="Segoe UI" />
            <TextBox x:Name="LoginBox" FontSize="14" Margin="0,5,0,10" FontFamily="Segoe UI" />
            <TextBlock Text="Пароль" FontSize="16" FontFamily="Segoe UI" />
            <PasswordBox x:Name="PasswordBox" FontSize="14" Margin="0,5,0,20" FontFamily="Segoe UI" />
            <Button Content="Войти" Click="LoginButton_Click" Background="#FF4CAF50" Foreground="White" FontSize="16" Padding="10,5" FontFamily="Segoe UI" />
            <Button Content="Регистрация" Click="RegisterButton_Click" Background="#FF2196F3" Foreground="White" FontSize="16" Padding="10,5" Margin="0,10,0,0" FontFamily="Segoe UI" />
        </StackPanel>
    </Grid>
</Window>