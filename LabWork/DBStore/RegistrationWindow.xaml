<Window x:Class="DBStore.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Логин" FontSize="16" FontFamily="Segoe UI" />
            <TextBox x:Name="LoginBox" FontSize="14" Margin="0,5,0,10" FontFamily="Segoe UI" />
            <TextBlock Text="Пароль" FontSize="16" FontFamily="Segoe UI" />
            <PasswordBox x:Name="PasswordBox" FontSize="14" Margin="0,5,0,10" FontFamily="Segoe UI" />
            <TextBlock Text="Подтвердите пароль" FontSize="16" FontFamily="Segoe UI" />
            <PasswordBox x:Name="ConfirmPasswordBox" FontSize="14" Margin="0,5,0,20" FontFamily="Segoe UI" />
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Background="#FF4CAF50" Foreground="White" FontSize="16" Padding="10,5" FontFamily="Segoe UI" />
        </StackPanel>
    </Grid>
</Window>